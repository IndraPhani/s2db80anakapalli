extends layout
block content
  h1= title

  if (toShow == null)
      h2 No instance to Detail 
  else 
  - let vehicleid = toShow._id
  - let vehicletype = toShow.vehicle_type
  - let vehiclebrand = toShow.brand
  - let vehicleprice = toShow.price
  div
    div.row
      div(class='vehicleAttr mr-3') Vehicle ID is:
      div #{vehicleid}
    div.row
      div(class='vehicleAttr mr-3') Vehicle Type is:
      div #{vehicletype}
    div.row
      div(class='vehicleAttr mr-3') Vehicle Brand is:
      div #{vehiclebrand}
    div.row
      div(class='vehicleAttr mr-3') Vehicle Price is:
      div #{vehicleprice} 